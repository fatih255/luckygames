{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./build",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/**/*.ts",
        "./src/*.ts",
    ],
    "types": [
        "node"
    ],
}